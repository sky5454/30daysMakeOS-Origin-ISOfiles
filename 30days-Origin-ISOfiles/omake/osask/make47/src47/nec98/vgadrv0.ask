void xline()
// AL:パターン, ESIからECX回。CLI();した状態で呼び出す。
// DL, ESI(直下のアドレス), ECX(= 0)を破壊。
{
	ECX -= 8;
	EAX = 0xffffffff;
	if ((unsigned) >= 0) { /* 1loopで256dot */
		do {
			[DS:ESI +  0] = EAX;
			[DS:ESI +  4] = EAX;
			[DS:ESI +  8] = EAX;
			[DS:ESI + 12] = EAX;
			[DS:ESI + 16] = EAX;
			[DS:ESI + 20] = EAX;
			[DS:ESI + 24] = EAX;
			[DS:ESI + 28] = EAX;
			ESI += 32;
			ECX -= 8;
		} while ((unsigned) >= 0);
	}
	ECX += 8;
	if (!= 0) {
		do {
			[DS:ESI] = EAX;
			ESI += 4;
			ECX--;
		} while (!= 0);
	}
	return;
}

