						STI();
						EDI--;
						LEA(ESI, [EBX + 4]);
					} while (!= 0);
//				}
			} else {
				PUSH(EBP);
				EBP++;
				PUSH(ESI);
#if 0
				if ((unsigned) (char) [SS:ESP + 13 + 8] == 0) {
					EBX = (unsigned char) [SS:ESP + 5 + 8];
					EDX = 0x03ce;
					EBX |= 0x0fff0;
					do {
						EAX = 0x0105;
						CLI();
						OUT(DX, AX); // Mode Reg (writing mode : 1)
						CL = [DS:EBX]; // ラッチ更新
						ECX = EDI;
						EAX = ESI;
						xline_pset();
						STI();
