							do {
								[DS:ESI] = AL;
								ESI += XBYTES;
								ECX--;
							} while (!= 0);
						}
						STI();
						LEA(ESI, [EAX + 1]);
						EDI--;
					} while (!= 0);
#endif
//				} else {
					do {
						ECX = EBP;
						EDX = 0x04a6; /* FGC */
						EAX = [SS:ESP + 4]; /* color */
						EBX = ESI;
						CLI();
						OUT(DX, AX);
						DL = 0xa4;
						EAX = [SS:ESP + 16]; /* ROP */
						OUT(DX, AX);
