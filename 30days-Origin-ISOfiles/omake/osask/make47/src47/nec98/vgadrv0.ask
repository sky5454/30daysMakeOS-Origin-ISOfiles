		(unsigned char) AL >>= CL;
		(char) [SS:ESP + 1] = AL;
		do {
			ECX = cmd[16]; /* xsize */
			PUSH((offset) q);
			PUSH(EBP);
			PUSH(EBX);
			BL = (char) [SS:ESP + 13];
			EDX = 0x04a4;
			EAX = 0x2cac; /* PSET */
			CLI();
			OUT(DX, AX);
			do {
				EAX = *pi;
				(offset) pi += 4;
				EDX = EAX;
				EBP = EAX;
				EAX >>= 23;
				EDX >>= 14;
				EBP >>=  5;
				EAX &= 0x01;
				EDX &= 0x02;
				EBP &= 0x04;
				EAX |= EDX;
				EAX |= EBP;
				if (!= 0)
					EAX += 8;
				EDX = 0x04a6; /* FGC */
				OUT(DX, AX); // color
			//	BH = *q; /* ラッチ更新 */
				*q = BL;
				(unsigned char) BL >>= 1;
				if (== 0) {
					q++;
					BL = 0x80;
				}
				ECX--;
			} while (!= 0);
			STI();
			POP(EBX);
			POP(EBP);
			POP((offset) q);
			(offset) q += XBYTES;
			(offset) p += cmd[24]; /* yskip */
			EBP--;
		} while (!= 0);
		(offset) cmd += 36;
		ESP += 72; 
		POP(EBP);
		POP(DS);
		POP(ES);
		asmout("JMP next_command");
